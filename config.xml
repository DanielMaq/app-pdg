<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:gap="http://phonegap.com/ns/1.0"
        id="app.pdg.com"
        versionCode=""
        version="1.0.0">
    <name>PDG</name>
    <description>
        PDG
    </description>
    <author href="" email="lorena.galli@telefonica.com">
        Telefónica Argenitna S.A.
    </author>
    <preference name='phonegap-version' value='cli-5.2.0'/>
    <preference name="orientation" value="default"/>
    <preference name="fullscreen" value="true"/>
    <preference name="android-windowSoftInputMode" value="adjustResize"/>
    <preference name="target-device" value="universal"/>
    <preference name="webviewbounce" value="true"/>
    <preference name="prerendered-icon" value="true"/>
    <preference name="stay-in-webview" value="true"/>
    <preference name="ios-statusbarstyle" value="black-transparent"/>
    <preference name="detect-data-types" value="true"/>
    <preference name="exit-on-suspend" value="false"/>
    <preference name="show-splash-screen-spinner" value="false"/>
    <preference name="auto-hide-splash-screen" value="true"/>
    <preference name="EnableViewportScale" value="true"/>
    <preference name="MediaPlaybackRequiresUserAction" value="true"/>
    <preference name="AllowInlineMediaPlayback" value="true"/>
    <preference name="BackupWebStorage" value="local"/>
    <preference name="TopActivityIndicator" value="gray"/>
    <preference name="KeyboardDisplayRequiresUserAction" value="true"/>
    <preference name="HideKeyboardFormAccessoryBar" value="true"/>
    <preference name="SuppressesIncrementalRendering" value="true"/>
    <preference name="android-minSdkVersion" value="9"/>
    <preference name="android-installLocation" value="internalOnly"/>
    <preference name="ErrorUrl" value=""/>
    <preference name="BackgroundColor" value="#005C85"/>
    <preference name="KeepRunning" value="true"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="LoadingDialog" value=","/>
    <preference name="LoadUrlTimeoutValue" value="20000"/>
    <preference name="disable-cursor" value="true"/>
    <gap:platform name="ios"/>
    <gap:platform name="android"/>
    <gap:platform name="winphone"/>
    <feature name="http://api.phonegap.com/1.0/notification"/>
    
    
    	<gap:plugin name="com.phonegap.plugin.statusbar" source="pgb" version="1.1.0" />
	<gap:plugin name="org.apache.cordova.device" source="pgb" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.dialogs" source="pgb" version="0.2.10" />
	<gap:plugin name="org.apache.cordova.media" source="pgb" version="0.2.13" />
	<gap:plugin name="org.apache.cordova.splashscreen" source="pgb" version="0.3.4" />

    <!--
    <gap:plugin name="org.apache.cordova.device"/>
    <gap:plugin name="org.apache.cordova.dialogs"/>
    <gap:plugin name="org.apache.cordova.media"/>
    <gap:plugin name="org.apache.cordova.splashscreen"/>
    <gap:plugin name="com.phonegap.plugins.pushplugin"/>
    <gap:plugin name="com.phonegap.plugin.statusbar"/>
    <gap:plugin name="de.appplant.cordova.plugin.badge" version="0.6.4"/>
    <gap:plugin name="de.appplant.cordova.plugin.background-mode" version="0.6.4"/>
    -->
    <!-- Default Icon -->
    <icon src="icon.png"/>
    <!-- Icon Sizes -->
    <!--<icon src="ldpi.png" gap:platform="android" gap:density="ldpi"/>-->
    <icon src="img/icons/mdpi/icon.png" gap:platform="android" gap:density="mdpi"/>
    <icon src="img/icons/hdpi/icon.png" gap:platform="android" gap:density="hdpi"/>
    <icon src="img/icons/xhdpi/icon.png" gap:platform="android" gap:density="xhdpi"/>
    <icon src="img/icons/xxhdpi/icon.png" gap:platform="android" gap:density="xxhdpi"/>

    <icon src="img/icons/ios-57/icon.png" gap:platform="ios" width="57" height="57"/>
    <icon src="img/icons/ios-72/icon.png" gap:platform="ios" width="72" height="72"/>

    <gap:splash src="Default-568h.png" gap:platform="ios" height="568" width="320"/>
    <gap:splash src="Default-568h@2x.png" gap:platform="ios" height="1136" width="640"/>
    <gap:splash src="splash.png"/>

    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" overwrite="true">
        <false/>
    </gap:config-file>

    <preference name="permissions" value="none"/>

    <access origin="*"/>
    <allow-navigation href="*"/>
</widget>